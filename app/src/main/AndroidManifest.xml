<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.xiaocai.nightmode">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppDayTheme">
        <activity
            android:name="com.xiaocai.nightmode.ItemListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.xiaocai.nightmode.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.xiaocai.nightmode.ItemListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xiaocai.nightmode.ItemListActivity"/>
        </activity>

        <activity android:name=".AboutActivity"/>
    </application>

</manifest>